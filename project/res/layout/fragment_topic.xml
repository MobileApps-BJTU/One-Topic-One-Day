<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/bg_fragment_topic"
            android:minHeight="250dp" >

            <TextView
                android:id="@+id/textView_date"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:text="2014-03-31"
                android:textColor="#CC3333"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/textView_topic"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:layout_toEndOf="@+id/btn_next"
                android:layout_toLeftOf="@+id/btn_next"
                android:layout_toRightOf="@+id/btn_prev"
                android:layout_toStartOf="@+id/btn_next"
                android:gravity="center"
                android:text="Is it good or not to observe the experience"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_prev"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="@drawable/bg_btn_prev" />

            <Button
                android:id="@+id/btn_next"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/bg_btn_next" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" >

                <TextView
                    android:id="@+id/textView_supportNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/icon_support_small"
                    android:drawableStart="@drawable/icon_support_small"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="10"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textView_againstNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/icon_against_small"
                    android:drawableStart="@drawable/icon_against_small"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="13"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textView_replyNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/icon_reply_small"
                    android:drawableStart="@drawable/icon_reply_small"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="13"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textView_faveriteNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/icon_faverite_small"
                    android:drawableStart="@drawable/icon_faverite_small"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="5"
                    android:textSize="20sp" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="0"
            android:background="@drawable/bg_fragment_topic" >

            <TextView
                android:id="@+id/textView_support_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/icon_support"
                android:gravity="center_horizontal"
                android:text="@string/topic_btn_support"
                android:textSize="15sp" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="#eeeeee" />

            <TextView
                android:id="@+id/textView_against_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/icon_against"
                android:gravity="center_horizontal"
                android:text="@string/topic_btn_against"
                android:textSize="15sp" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="#eeeeee" />

            <TextView
                android:id="@+id/textView_reply_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/icon_reply"
                android:gravity="center_horizontal"
                android:text="@string/topic_btn_reply"
                android:textSize="15sp" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="#eeeeee" />

            <TextView
                android:id="@+id/textView_faverite_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/icon_faverite"
                android:gravity="center_horizontal"
                android:text="@string/topic_btn_favorite"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>